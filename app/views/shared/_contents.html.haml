#contents
  #ContentsBody
    .Container
      %span.Guid
        %a#ContentsStart
      #Main
        %article.section
          .container
            %header.header.header--section
              %h2.text-middle
                .color-gray-light
                NEW TOPICS
            %ul#list-module.thumbnails
              - @tweets.each do |tweet|
                %li.col
                  = link_to "", class: "col_contents" do
                    = image_tag tweet.image_url do
                      .thumbnail_figure
                    .thumbnail__caption
                      %h3.text-xsmall.text-overflow
                        %span>
                          = tweet.country
                          ／
                          = tweet.title
      #Sub
        %aside.section
          %h4.text-small.hr-bottom--thin.no-space-bottom
            %i.icon-crown.color-gray-light>
            RANKING
