#contents
  #ContentsBody
    .Container
      %span.Guid
        %a#ContentsStart
      #Main
        %article.section
          .container
            %header.header.header--section
              %h2.text-middle
                .color-gray-light
                新規投稿
            %ul#list-module.thumbnails
              - @tweets.each do |tweet|
                %li.col
                  = image_tag tweet.image_url do
                    .thumbnail_figure
                  .thumbnail__caption
                    %h3.text-xsmall.text-overflow
                      %span>
                        = tweet.title
